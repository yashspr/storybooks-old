<div class="row">
	<h1>Stories {{#if userName}} by {{userName}} {{/if}}</h1>

	{{#each stories}}
		<div class="col s12 m4">
			<div class="card">
				<div class="card-image">
					{{#if user}}
						{{{editIcon this.user.id ../user.id this.id}}}
					{{/if}}
				</div>

				<div class="card-content center-align">
					<h5><a href="/stories/show/{{this.id}}">{{title}}</a></h5>
					<p class="story-text">{{stripTags (truncate body 150)}}</p>
					<br>
					<div class="chip">
						<img src="{{user.image}}" alt="" srcset="">
						{{#if (checkStoryUserEqualsUser this.user.id ../user.id)}}
							<a href="/stories/my">{{this.user.fullName}}</a>
						{{else}}
							<a href="/stories/user/{{story.user.id}}">{{this.user.fullName}}</a>
						{{/if}}
					</div>
				</div>
				<div class="card-action center-align">
					<a href="/stories/show/{{id}}" class="btn grey">Read More</a>
				</div>
			</div>
		</div>
	{{else}}
		<h5>No stories found</h5>
	{{/each}}
</div>