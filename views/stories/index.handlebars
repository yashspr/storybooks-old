<div class="row">
	<h1>Stories</h1>

	{{#each stories}}
		<div class="col s12 m4">
			<div class="card">

				<div class="card-image">
					<a href="/stories/edit/{{id}}" class="btn-floating halfway-fab red center">
						<i style="font-size: 16px" class="fas fa-pencil-alt"></i>
					</a>
				</div>
				
				<div class="card-content center-align">
					<h5>{{title}}</h5>
					<p class="story-text">{{{body}}}</p>
					<br>
					<div class="chip">
						<img src="{{user.image}}" alt="" srcset="">
						{{user.fullName}}
					</div>
				</div>
				<div class="card-action center-align">
					<a href="/stories/show/{{id}}" class="btn grey">Read More</a>
				</div>
			</div>
		</div>
	{{else}}
		<h5>No stories found</h5>
	{{/each}}
</div>