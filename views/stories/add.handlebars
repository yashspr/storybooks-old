<h1>Add Story</h1>

<div class="row">
	<form action="/stories/add" class="col s12" method="POST">
		<div class="row">
			<div class="input-field">
				<input type="text" name="title" pattern="[a-zA-Z0-9]{10,}" title="Title must have atleast 10 characters" required>
				<label for="title">Title</label>
			</div>
		</div>

		<div class="row">
			<div class="input-field">
				<select name="status">
					<option selected value="public">Public</option>
					<option value="private">Private</option>
					<option value="unpublished">Unpublished</option>
				</select>
				<label for="status">Status</label>
			</div>
		</div>

		<div class="row">
			<p>
				<label>
					<input type="checkbox" class="filled-in" name="allowComments" checked="checked" />
					<span>Allow Comments</span>
				</label>
			</p>
		</div>

		<div class="row">
			<div class="input-field">
				<h5>Tell Us Your Story: </h5>
				<br>
				<textarea id="story-body" name="body"></textarea>
			</div>
		</div>

		<div class="row">
			<input class="btn" type="submit" value="Save">
		</div>

	</form>
</div>